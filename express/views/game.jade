                    input(type='radio', name='choice', value='paper')
                    | Paper
                label(class="radio-inline")
                    input(type='radio', name='choice', value='scisor')
                    | Scisor
                label(class="radio-inline")
                    input(type='radio', name='choice', value='lizard')
                    | Lizard
                label(class="radio-inline")
